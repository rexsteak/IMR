        <dd>
        @foreach (var app in Model.findApplications())
        {
            <li>@app.Name</li>

        }
        </dd>

    </dl>


	    @Html.ActionLink("Edit", "Edit", new { id = Model.Supporter_Id }, new { @class = "btn btn-primary"})
